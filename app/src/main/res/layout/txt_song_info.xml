    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/custom_toast_container"
        android:layout_marginTop="40dp"
        >

        <ImageView
            android:id="@+id/myRectangleView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxWidth="329dp"
            android:maxHeight="280dp"
            android:scaleType="fitXY"
            android:src="@drawable/message"
            app:layout_constraintBottom_toBottomOf="@+id/toast_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintHorizontal_bias="0.764"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.85" />

        <TextView
            android:id="@+id/toast_message"
            android:maxWidth="299dp"
            android:minWidth="200dp"
            android:layout_width="299dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:paddingBottom="38dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingLeft="25dp"
            android:text="loading funfact"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/myRectangleView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/myRectangleView"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

